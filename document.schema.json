{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://espositoandrea.github.io/adpt-document-schema/document.schema.json",
  "title": "AsciiDoc Document",
  "description": "An AsciiDoc document to be converted by the AsciiDoc Publishing Toolbox",
  "type": "object",
  "properties": {
    "title": {
      "description": "The title of the work",
      "type": "string"
    },
    "type": {
      "description": "The type of document",
      "type": "string",
      "default": "book",
      "enum": [
        "book",
        "article"
      ]
    },
    "authors": {
      "description": "The authors of the document",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "description": "The author name",
            "type": "string"
          },
          "surname": {
            "description": "The author surname",
            "type": "string"
          },
          "middlename": {
            "description": "The author middlename",
            "type": "string"
          },
          "email": {
            "description": "The author email",
            "type": "string"
          }
        },
        "required": [
          "name",
          "surname"
        ],
        "uniqueItems": true
      }
    },
    "version": {
      "description": "The document's version/edition",
      "type": "object",
      "properties": {
        "number": {
          "description": "The version number",
          "type": "string"
        },
        "date": {
          "description": "The version date",
          "type": "string"
        },
        "note": {
          "description": "A note about the version",
          "type": "string"
        }
      },
      "required": [
        "number"
      ]
    },
    "chapters": {
      "description": "The document chapters",
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "properties": {
          "title": {
            "description": "The chapter title. It will be used to generate a file name",
            "type": "string"
          },
          "part": {
            "description": "Whether or not the chapter should be treated as a part",
            "type": "boolean",
            "default": false
          }
        }
      }
    },
    "lang": {
      "description": "The document language (IANA subtag)",
      "type": "string",
      "default": "en"
    }
  },
  "required": [
    "title",
    "authors"
  ]
}
